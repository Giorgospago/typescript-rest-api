{
  "name": "typescript-rest-api",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "dev": "concurrently 'npm run dev-compile' 'npm run dev-start'",
    "dev-start": "nodemon",
    "dev-compile": "swc src -d dist --strip-leading-paths -w",
    "build": "swc src -d dist --strip-leading-paths"
  },
  "nodemonConfig": {
    "verbose": false,
    "watch": [
      "dist/**/*"
    ],
    "exec": "node dist/app.js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.1",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.0"
  }
}
